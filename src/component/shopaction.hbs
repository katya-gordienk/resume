{{!-- Service --}}
<div class="card text-center text-bg-success">
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="section-title">{{service.title}}</h2>
                    <p>{{service.description}}</p>
                </div>
            </div>
            <div class="row mb-3">
                <div mb-3>
                    {{#each service.buttons}}
                    <a type="button" class="btn btn-primary text-light" href="{{this.link}}">{{this.text}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
</div>