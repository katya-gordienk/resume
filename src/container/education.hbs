<main>
    {{#with main}}
    <main>
        <section>
            <hr>
            <h1> {{> title data='My education:' big=true}}
            </h1>
            <ul class="ps-5">
                {{#each education}}
                <li>{{name}}</li>
                {{#if isEnd}} (В процесі) {{/if}}
                {{/each}}
            </ul>

        </section>

        <section>
            <h3>{{> title data="My certificates:"}}</h3>
            <ul class="ps-5">
                {{#each certificates}}

                <li>{{name}} ({{id}})</li>

                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}

</main>