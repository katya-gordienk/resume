{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="mb-4">
	{{#with main}}

	<main>
		<section>
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							{{> title data='Work Experience' big=true}}
						</div>
						<div>
							<p>
							<ul>
								{{#each works}}

								<li>
									<div>{{position}}
									</div>
									<br>
									<div>{{duration.from}} -
										{{#if duration.to}}
										{{duration.to}}
										{{else}}
										(досі працуємо)
										{{/if}}
									</div>


									<div>


										{{#if company.url }}
										{{> link text=company.name href=company.url blank=true noLine=true}}
										{{else}}
										<b> {{company.name}}</b>
										{{/if}}
									</div>
						</div>
					</div>
				</div>
				<div>
					<strong> Projects ({{projectAmount}}) </strong>
				</div>
				<br>

				<ul>
					{{#each projects}}
					<li>
						<div>
							{{> link text=name href=url blank=true noLine=true }}
						</div>
						<div class="mb-4">
							<p>{{about}}</p>
						</div>
						<div class="mb-4">
							<em> Project Stacks ({{stacksAmount}})</em>
						</div>
						<div class="mb-4">
							<ul class="mb-3">
								{{#each stacks}}
								<li class="mb-3">
									{{name}}
								</li>
								{{/each}}
							</ul>
						</div>

						<div class="mb-5">

							<div class="col-12">
								<div class="card mb-3">
									<div class="card-header mb-3">
										<br>
										<em class="mb-3">Project awards ({{awarsdAmount}})</em>
									</div>
									<div class="mb-3">
										<div>
											<ul class="mb-3">
												<br>
												<div class="mb-4">{{#each awards}}</div>
												<li>
													{{name}}
												</li>
												{{/each}}
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</li>
			</div>
			{{/each}}
			</ul>
			</li>
			<br>
			{{/each}}
			</ul>
</div>
</section>
</main>
{{/with}}
</div>
</div>
</div>