{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="mb-4">
	{{#with main}}
	<main>
		<section>
			<div>
				<h2>{{> title data="Work history" big=true}} </h2>
			</div>
			<div>
				<p>
				<ul>
					{{#each works}}

					<li>
						<div>{{position}}
						</div>
						<br>
						<div>{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працуємо)
							{{/if}}
						</div>
						<br>

						<div>


							{{#if company.url }}
							{{> link text=company.name href=company.url blank=true noLine=true}}
							{{else}}
							<b> {{company.name}}</b>
							{{/if}}
						</div>

						<br>
						<br>

						<div>
							<strong> Projects ({{projectAmount}}) </strong>
						</div>
						<br>

						<ul>
							{{#each projects}}
							<li>
								<div>
									{{> link text=name href=url blank=true noLine=true }}
								</div>
								<div class="mb-4">
									<p>{{about}}</p>
								</div>
								<div class="mb-4">
									<em> Project Stacks ({{stacksAmount}})</em>
								</div>
								<div class="py-4">
									<ul>
										{{#each stacks}}
										<li>
											{{name}}
										</li>
										{{/each}}
									</ul>
								</div>

								<div class="mb-5">
									<em>Project awards ({{awarsdAmount}})</em>
								</div>
								<div class="mb-3">
									<div>
										<ul class=>
											{{#each awards}}
											<li>
												{{name}}
											</li>
											{{/each}}
										</ul>
									</div>
							</li>
			</div>
			{{/each}}
			</ul>
			</li>
			<br>
			{{/each}}
			</ul>
</div>
</section>
</main>
{{/with}}
</div>